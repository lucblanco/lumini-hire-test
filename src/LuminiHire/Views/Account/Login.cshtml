@model CollegeScorecard.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}

<br>
<center>
    <h1>Login</h1>
    <br>
    <br>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset style="width: 40%;">
            <br />
            <input type="text" class="form-control" name="Login" placeholder="Digite seu login..." />
            @Html.ValidationMessageFor(model => model.Login)
            <br />
            <br />
            <input type="password" class="form-control" name="Senha" placeholder="Digite sua senha..." />
            @Html.ValidationMessageFor(model => model.Senha)
            <br />
            <br />
            <button type="submit" class="btn btn-primary" style="background-color: black; border: none;">Logar</button>
            <br /><br /><br />

            @if (ViewBag.Erro != null)
            {
                <h3 style="padding: 20px; color: white; background-color: dimgray">
                    @ViewBag.Erro
                </h3>
            }
        </fieldset>
    }
</center>
